<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <data>

  <!--

  <act_window id="act_window_sth"
    name="To-Do Task"
    res_model="todo_app.task"
    view_mode="tree,form"
  />

  -->

    <record id="todo_task_act_window" model="ir.actions.act_window">
      <field name="name">To-Do Task</field>
      <field name="res_model">todo_app.task</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_tree_todo_task" model="ir.ui.view">
      <field name="name">To-Do Task</field>
      <field name="model">todo_app.task</field>
      <field name="arch" type="xml">
        <tree>
          <field name="title"></field>
          <field name="date_deadline"></field>
          <field name="is_done"></field>
          <field name="active"></field>
        </tree>
      </field>
    </record>

    <record id="view_search_todo_task" model="ir.ui.view">
      <field name="name">To-Do Task Search</field>
      <field name="model">todo_app.task</field>
      <field name="arch" type="xml">
        <search>
          <field name="title"></field>
          <filter name="filter_task_done"
            string="Done"
            domain="[('is_done', '=', True)]"
          ></filter>
          <filter name="filter_task_not_done"
            string="Not Done"
            domain="[('is_done', '=', False)]"
          ></filter>
        </search>
      </field>
    </record>

    <record id="view_form_todo_task" model="ir.ui.view">
      <field name="name">To-Do Task Form</field>
      <field name="model">todo_app.task</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="toggle_done" type="object" string="Toggle Done"></button>

            <button name="archive_done" string="Archive Done Task"></button>
          </header>
          <sheet>
            <group name="first" col="5">
              <group colspan="3">
                <field name="title"></field>
              </group>
              <group colspan="2">
                <field name="is_done"></field>
              </group>
            </group>

            <group name="second">
              <group name="second_first">
                <field name="date_deadline"></field>
              </group>
            </group>

          </sheet>
        </form>
      </field>
    </record>
    <record id="todo_task_menu" model="ir.ui.menu">
      <field name="name">To-Do</field>
      <field name="action" ref="todo_task_act_window"></field>
    </record>
  </data>
</odoo>
